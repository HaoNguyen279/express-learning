<style>
    .fa-check-circle {
        animation: checkmark 0.6s ease-in-out;
    }
    
    @keyframes checkmark {
        0% {
            transform: scale(0);
            opacity: 0;
        }
        50% {
            transform: scale(1.2);
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    
    .card {
        position: relative;
        border-radius: 15px;
        overflow: visible;
        z-index: 1;
    }

    .card-bg {
        position: relative;
        border-radius: 15px;
        background-color: #1a1a1a;
        padding: 2rem; 
        z-index: 2;
    }

    .card::before,
    .card::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 15px;
        background: linear-gradient(270deg,
            #00ffcc, #ff3399, #ffff33, #33ccff, #cc33ff, #ff6600, #ffffff, #00ffcc ,#ff3399
        );
        background-size: 800% 800%;
        animation: borderFlow 3s linear infinite;
        will-change: background-position;
        pointer-events: none;
    }

    .card::before {
        padding: 4px; 
        z-index: 1;
        box-sizing: border-box;
        mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
    }

    .card::after {
        filter: blur(17px);
        opacity: 0.7;
        z-index: 0;
    }

    @keyframes borderFlow {
        0% { background-position: 0% 50%; }
        100% { background-position: 100% 50%; }
}


    .btn {
        border-radius: 10px;
    }
</style>


<script>
    document.getElementById('loginTime').textContent = new Date().toLocaleString('vi-VN');
    
    setTimeout(function() {
         window.location.href = '/laptops'; 
    }, 10000);
</script>