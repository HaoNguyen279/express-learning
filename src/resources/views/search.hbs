<script>
    const param = new URLSearchParams(window.location.search);
    const color = param.get('color');
    console.log(color);
    var spantest = document.getElementsByClassName('badge');
    console.log(spantest);
    Array.from(spantest).forEach(function(span){
        if (color) {
            span.classList.add(color);
        }
    });
</script>