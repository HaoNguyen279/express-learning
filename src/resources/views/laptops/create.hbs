<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Thêm Sản Phẩm Mới</h3>
        </div>
        <div class="card-body">
          <form id="productForm" action="/laptops/store" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Tên sản phẩm</label>
              <input type="text" class="form-control" id="name" name="name" value="Lenovo LOQ 15APH9" required>
            </div>
            
            <div class="mb-3">
              <label for="price" class="form-label">Giá (USD)</label>
              <input type="number" class="form-control" id="price" name="price" value="2100" min="0" step="0.01" required>
            </div>
            
            <div class="mb-3">
              <label for="specs" class="form-label">Thông số kỹ thuật</label>
              <textarea class="form-control" id="specs" name="specs" rows="3" required>Intel Core i7 • NVIDIA GeForce RTX 4070ti • 32GB RAM • 1TB SSD</textarea>
            </div>
            
            <div class="mb-3">
              <label for="image_url" class="form-label">URL hình ảnh</label>
              <input type="url" class="form-control" id="image_url" name="image_url" value="https://product.hstatic.net/200000722513/product/legion_pro_5_16irx9_ct1_03_868dde7f287441a89e2bd18398625567_master.png" required>
            </div>
            
            <div class="mb-3">
              <label for="slug" class="form-label">Slug</label>
              <input type="text" class="form-control" id="slug" name="slug" value="loq-15aph9" required>
            </div>
            
            <div class="mb-3">
              <label for="brand" class="form-label">Thương hiệu</label>
              <input type="text" class="form-control" id="brand" name="brand" value="Lenovo" required>
            </div>
            
            <div class="mb-3">
              <label for="rating" class="form-label">Đánh giá</label>
              <input type="number" class="form-control" id="rating" name="rating" value="4.5" min="0" max="5" step="0.1" required>
            </div>
            
            <div class="mb-3">
              <label for="total_ratings" class="form-label">Tổng số đánh giá</label>
              <input type="number" class="form-control" id="total_ratings" name="total_ratings" value="324" min="0" required>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
              <button type="button" class="btn btn-secondary" id="showJsonBtn">Xem JSON</button>
            </div>
          </form>
        </div>
      </div>