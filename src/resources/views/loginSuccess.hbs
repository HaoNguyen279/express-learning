</div>
    <!-- Animation cho icon -->
    <style>
        .fa-check-circle {
            animation: checkmark 0.6s ease-in-out;
        }
        
        @keyframes checkmark {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        
        .card {
            border-radius: 15px;
        }
        
        .btn {
            border-radius: 10px;
        }
    </style>

    <!-- Script hiển thị thời gian hiện tại -->
    <script>
        document.getElementById('loginTime').textContent = new Date().toLocaleString('vi-VN');
        
